{
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.{ts,tsx,json,jsonc,md,html}",
      "!**/node_modules/**/*",
      "!**/.react-router/**/*",
      "!**/.turbo/**/*",
      "!**/public/**/*",
      "!**/dist/**/*",
      "!**/build/**/*",
      "!**/migrations/**/*"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "attributePosition": "auto",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "expand": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedLabels": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useUniqueElementIds": "off",
        "noPrivateImports": "error"
      },
      "style": {
        "noUselessElse": "error",
        "noInferrableTypes": "error",
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": {
          "level": "error",
          "fix": "safe"
        },
        "useAsConstAssertion": "error",
        "useConst": {
          "level": "error",
          "fix": "safe"
        },
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useNumberNamespace": "error",
        "useSelfClosingElements": {
          "level": "error",
          "fix": "safe",
          "options": {}
        },
        "useSingleVarDeclarator": "error"
      },
      "suspicious": {
        "useAwait": "error",
        "noConsole": "warn",
        "noDoubleEquals": "error"
      },
      "nursery": {
        "noFloatingPromises": {
          "level": "error",
          "fix": "safe"
        },
        "noMisusedPromises": "error",
        "useExhaustiveSwitchCases": "error"
      }
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "selfCloseVoidElements": "always"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
