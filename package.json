{
  "name": "react-router-v7-cloudflare-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "pnpm run build && wrangler deploy",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./auth.cli.ts --output ./app/db/schema/auth.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply --local db",
    "db:migrate-prod": "pnpm wrangler d1 migrations apply db --remote",
    "dev": "react-router dev",
    "postinstall": "npm run cf-typegen",
    "preview": "pnpm run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.11",
    "better-auth": "^1.4.16",
    "drizzle-orm": "^0.45.1",
    "isbot": "^5.1.31",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.10.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.5",
    "@react-router/dev": "^7.10.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "drizzle-kit": "^0.31.8",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.59.3"
  }
}
